<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="CustomTheme.ActionBar" parent="android:style/Widget.Holo.ActionBar">     
        <item name="android:background">@color/headerColor</item>             
        <item name="android:titleTextStyle">@style/CustomTheme.ActionBar.Text</item>
    </style>

	<style name="CustomTheme" parent="android:Theme.Holo.Light">
	  <item name="android:actionBarStyle">@style/CustomTheme.ActionBar</item>
	   <item name="android:actionMenuTextColor">@color/headerTextColor</item>
	   <item name="android:buttonStyle">@style/CustomTheme.Button</item>
	</style>
  
	<style name="CustomTheme.ActionBar.Text" parent="android:style/TextAppearance">
	    <item name="android:textColor">@color/headerTextColor</item>
	</style>
	
	
	<style name="CustomTheme.Button" parent="android:style/Widget.Holo.Button">
	    <item name="android:background">@drawable/custom_button</item>
	    <item name="android:textColor">@color/buttonTextColor</item>
	</style>
</resources>