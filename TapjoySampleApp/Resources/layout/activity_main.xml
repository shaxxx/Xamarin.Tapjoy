<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:fillViewport="true">
   	<LinearLayout 
	android:id="@+id/LinearLayout01" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:padding="15dp"
	android:background="@color/backgroundColor">
			
	    <TableLayout
	        android:id="@+id/tableLayout1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center" 
	        android:stretchColumns="0,1"
	        android:background="@drawable/table_shape">

	        <TableRow
	            android:id="@+id/tableRow2"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:padding="5dp" 
	            android:gravity="center_vertical">
	            	<TextView
				        android:id="@+id/app_id_label"
				        android:layout_width="0dip"
				        android:layout_height="match_parent"
				        android:gravity="center_vertical"
				        android:text="App ID" 
				        android:textSize="12sp"
				        android:layout_weight="1"/>
	            		    
	            	<TextView
				        android:id="@+id/app_id_field"
					    android:layout_width="0dip"
				        android:layout_height="match_parent"
				        android:textSize="12sp"
				        android:layout_weight="2"
				        android:gravity="center_vertical"
				        android:ellipsize="end"
				        android:singleLine="false"
						android:lines="2"
				       />
	            </TableRow>
	            
	            <View
		        android:layout_height="2dip"
		        android:background="@color/tableBorderColor" />
	            
				<TableRow
	            android:id="@+id/tableRow3"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:padding="5dp" 
	            android:gravity="center_vertical">
	            	<TextView
				        android:id="@+id/secret_key_label"
				        android:layout_width="0dip"
				        android:layout_height="match_parent"
				        android:gravity="center_vertical"
				        android:textSize="12sp"
				        android:text="Secret Key" 
				        android:layout_weight="1"/>
			    	<TextView
			    	    android:id="@+id/secret_key_field"
			    	    android:layout_width="0dip"
			    	    android:layout_height="match_parent"
			    	    android:text=""
			    	    android:textSize="12sp"
				        android:layout_weight="2"
				        android:gravity="center_vertical"
				        android:ellipsize="end"
				        android:singleLine="false"
						android:lines="2"/>
				</TableRow>
				
	            <View
		        android:layout_height="2dip"
		        android:background="@color/tableBorderColor" />
	            
				<TableRow
	            android:id="@+id/tableRow4"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:padding="5dp" 
	            android:gravity="center_vertical">		  
				    <TextView
				        android:id="@+id/managed_currency_label"
				        android:layout_width="0dip"
				        android:layout_height="match_parent"
				        android:gravity="center_vertical"
				        android:textSize="12sp"
				        android:text="Managed Currency"
				        android:layout_weight="1" />  
				    <CheckBox
				        android:id="@+id/managed_currency_checkbox"
				        android:layout_width="0dip"
				        android:layout_height="match_parent"
				        android:enabled="false"
				        android:text=" "
				        android:gravity="center_vertical"
				        android:ellipsize="end"
				        android:lines="2"
				        android:layout_weight="2"/>
	
				</TableRow>
	
				 <View
		        android:layout_height="2dip"
		        android:background="@color/tableBorderColor" />
				 
				<TableRow
	            android:id="@+id/tableRow5"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:padding="5dp"
	            android:gravity="center_vertical" >	

				    <TextView
				        android:id="@+id/currency_id_label"
				        android:layout_width="0dip"
				        android:layout_height="match_parent"
				        android:gravity="center_vertical"
				        android:text="Currency ID"
				        android:textSize="12sp"
				        android:layout_weight="1" />

				    <TextView
				        android:id="@+id/currency_id_field"
				        android:layout_width="0dip"
				        android:layout_height="match_parent"
				        android:textSize="12sp"
				        android:layout_weight="2"
				        android:gravity="center_vertical"
				        android:ellipsize="end"
				        android:singleLine="false"
						android:lines="2"/>
			    </TableRow>
		    </TableLayout>
		
		
		    <View
		        android:layout_height="5dp"
		        android:layout_width="fill_parent" />

		    <Button
		        android:id="@+id/SelectAppButton"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="Select App ID"
		        android:visibility="visible"
		        android:layout_margin="5dp" 
		        android:gravity="center"/>
		    <Button
		        android:id="@+id/SelectCurrencyButton"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="Select Currency ID"
		        android:visibility="visible"
		        android:layout_margin="5dp" 
		        android:gravity="center"/>
		    <Button
		        android:id="@+id/CreateAppButton"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="Create New App"
		        android:visibility="visible"
		        android:layout_margin="5dp" 
		        android:gravity="center"/>
		    					    		    		    
		    <Button
		        android:id="@+id/ConnectButton"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="Connect"
		        android:visibility="visible"
		        android:layout_margin="5dp"
		        android:gravity="center" />
		
			<View 
		        android:layout_height="5dp"
		        android:layout_width="fill_parent"/>
		    
		    <TextView
		        android:id="@+id/debug_output_label1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Debug Output"
				android:textAppearance="?android:attr/textAppearanceMedium"/>
		
		    <EditText
		        android:id="@+id/debug_output_field"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10"
		        android:inputType="textMultiLine|textNoSuggestions" 
		        android:clickable="false" 
		        android:cursorVisible="false" 
		        android:focusable="false" 
		        android:focusableInTouchMode="false">
		
		        <requestFocus />
		    </EditText>
   	</LinearLayout>
</ScrollView>
