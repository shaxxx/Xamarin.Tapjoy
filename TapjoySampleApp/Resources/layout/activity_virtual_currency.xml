<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	tools:context=".VirtualCurrencyActivity" >
   	<LinearLayout 
	android:id="@+id/LinearLayout01" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:padding="15dp"
	android:background="@color/backgroundColor">
	       <View
            android:layout_width="fill_parent"
            android:layout_height="10dp"/>
       	    <Button 
				android:layout_height="wrap_content" 
				android:layout_width="fill_parent" 
				android:text="Get Currency" 
				android:id="@+id/GetCurrencyButton" 
				android:visibility="visible" 
				android:layout_margin="5dp" />
				
			<Button 
				android:layout_height="wrap_content" 
				android:layout_width="fill_parent" 
				android:text="Spend Currency" 
				android:id="@+id/SpendCurrencyButton" 
				android:visibility="visible"
				android:layout_margin="5dp"  />
			
			<Button 
                android:layout_height="wrap_content" 
                android:layout_width="fill_parent" 
                android:text="Award Currency" 
                android:id="@+id/AwardCurrencyButton" 
                android:visibility="visible" 
                android:layout_margin="5dp" />
       <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_marginBottom="14dp"/>
    <TextView
        android:id="@+id/debug_output_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Debug Output"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <EditText
        android:id="@+id/debug_output_field_currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="textMultiLine|textNoSuggestions" >

        <requestFocus />
    </EditText>
</LinearLayout>
</ScrollView>